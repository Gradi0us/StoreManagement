<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Product Detail"
    android:textStyle="bold"
    android:textSize="25dp"/>
        <TextView
            android:layout_marginLeft="3dp"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(ID: "
            />
        <TextView
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/id_product"/>
        <TextView
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
           />
    </LinearLayout>
    <ImageView
        android:id="@+id/imageViewProduct"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_info"
        />
<LinearLayout

    android:layout_marginTop="16dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name:"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView

        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:id="@+id/textViewProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Name"
        android:textColor="@color/grey"
        android:layout_gravity="center_horizontal"
       />
</LinearLayout>

    <LinearLayout

        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Type:"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:id="@+id/textViewProductType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Type"
            android:textColor="@color/grey"
            android:layout_gravity="center_horizontal"
           />
    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Price:"
            android:textSize="20dp"
            android:textStyle="bold"/>
    <TextView
        android:text="Price"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/grey"
        android:layout_gravity="center_horizontal"
      />
    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Size:"
            android:textSize="20dp"
            android:textStyle="bold"/>
    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:id="@+id/textViewSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/grey"
        android:text="Size"
        android:layout_gravity="center_horizontal"
        />
    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Price:"
            android:textSize="20dp"
            android:textStyle="bold"/>
    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:id="@+id/textViewMount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/grey"
        android:text="Mount"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/create_bill"
            android:backgroundTint="@color/grey"
            android:textColor="@color/heavy_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an new Bill"/>
        <Button
            android:id="@+id/addonbill"
            android:backgroundTint="@color/grey"
            android:textColor="@color/heavy_grey"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:text="Add on Existed Bill"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
