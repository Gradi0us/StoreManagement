<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainScreen.ScreenFragment_DrawerNav.Change_password">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserID:    "
        />
    <TextView
        android:id="@+id/userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        />

</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:text="Nhập mật khẩu hiện tại password"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/currentpass"
            android:layout_width="match_parent"
            android:hint="current password"
            android:layout_height="wrap_content"/>
        <TextView

            android:layout_width="wrap_content"
            android:text="Nhập mật mới password"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/newpass"
            android:layout_width="match_parent"
            android:hint="new password"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutgetcode"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:text="Mã xác nhận email"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/confirm_code"
                android:hint="Confirm code"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/getcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Code"/>
        </LinearLayout>

    </LinearLayout>
 <Button
        android:layout_gravity="center"
        android:text="Change Pass"
        android:layout_width="wrap_content"
        android:id="@+id/changepass"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passcu"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codetuemail"/>


</LinearLayout>